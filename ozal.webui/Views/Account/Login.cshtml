<div class="d-flex justify-content-center">
    <div class="box bg-img">
        <div class="content">
            <h2>Sign<span> In</span></h2>
            <form asp-controller="Account" asp-action="Login" method="POST" class="forms">
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
                <div class="user-input">
                    <input class="form-control login-input" asp-for="Email">
                    <i class="fas fa-user"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="pass-input">
                    <input class="form-control login-input" asp-for="Password" id="my-password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="eye" onclick="myFunction()">
                        <i id="hide-1" class="fas fa-eye-slash"></i>
                        <i id="hide-2" class="fas fa-eye"></i>
                    </span> 
                </div>
                <button type="submit" class="login-btn">Sign In</button>
                <p class="new-account" style="color: white;">Not a member? <a href="/Account/Register">Sign Up now!</a></p>
            </form>
        </div>
    </div>
</div>

<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

