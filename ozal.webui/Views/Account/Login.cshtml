<style>
    .box {
    background-image: url("https://images.pexels.com/photos/2387793/pexels-photo-2387793.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    width: 320px;
    height: 450px;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 5px 8px 5px rgba(0, 0, 0, 0.3);
    }

    .bg-img {
    background-position: center;
    background-size: cover;
    }

    .content {
    text-align: center;
    }

    .content h2 {
    padding: 15px 0px 15px;
    font-size: 2em;
    color: aliceblue;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 2px;
    }

    .user-input {
    position: relative;
    }

    .user-input i {
    position: absolute;
    right: 4px;
    top: 5px;
    padding: 9px 8px;
    color: #848484;
    transition: 0.3s;
    }

    .pass-input {
    position: relative;
    }

    .pass-input i {
    position: absolute;
    right: 4px;
    top: 5px;
    padding: 9px 8px;
    color: #848484;
    transition: 0.3s;
    }

    .login-input {
    color: white;
    border-radius: 2px;
    width: 240px;
    height: 44px;
    border: none;
    padding: 15px 20px;
    background-color: rgba(65, 65, 65, 0.5);
    margin-bottom: 24px;
    }

    .login-input:focus {
    outline: none;
    border-bottom: 2px solid #06ff8c;
    }

    .login-input:focus:invalid {
    border-bottom: 2px solid #ffce00;
    }

    .login-btn {
    font-size: 16px;
    font-weight: 700;
    width: 240px;
    border-radius: 44px;
    padding: 12px;
    background-color: #ffce00;
    border: none;
    cursor: pointer;
    margin-bottom: 32px;
    }

    span {
    color: #ffce00;
    }

    .new-account a {
    color: #c6a109;
    font-weight: 400;
    }

    .f-pass a {
    color: #626262;
    text-decoration: none;
    }

    #hide-1 {
    display: none;
    }

    .logo {
    position: absolute;
    top: 0;
    left: 0;
    width: auto;
    padding: 20px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    }

    .logo-img {
    position: relative;
    width: 78px;
    height: auto;
    }
</style>

<script src="https://kit.fontawesome.com/c0078485ae.js" crossorigin="anonymous"></script>
<script>
    function myFunction() {
        var x = document.getElementById("my-password");
        var y = document.getElementById("hide-1");
        var z = document.getElementById("hide-2");

        if (x.type === "password") {
            x.type = "text";
            y.style.display = "block";
            z.style.display = "none";
        } else {
            x.type = "password";
            y.style.display = "none";
            z.style.display = "block";
        }
    }
</script>